.forgot-container {
min-height
:100vh;
width
:100%;
padding
:160rpx 44rpx 244rpx 44rpx;
background
:url(http://clfile.zggen.cn/20231130/51b25124d35a4e059579e6c84f9948aa.jpg) no-repeat center top / 100%,#ffffff;
height
:100%;
}

.forgot-content {
max-width: calc(100% - 23%);
overflow: hidden;
padding
:48rpx 48rpx 48rpx 48rpx;
box-shadow
:0px 0px 12rpx #dddddd;
border-radius
:4rpx;
background
:#ffffff;
display
:block;
width
:100%;
position
:relative;
height
:auto;
}
.box{
width: 90%!important;
    width
:100%;
    margin
:0 0 24rpx 0;
    height
:auto;
}
input{
border
:2rpx solid #00000010;
padding
:0px 24rpx 0 24rpx;
margin
:0 0 0 0;
color
:#999999;
border-radius
:0px;
background
:#ffffff;
width
:100%;
font-size
:28rpx;
height
:80rpx;
}



.next-btn {
    border
:2rpx solid #dddddd;
    padding
:0 0 0 0;
    margin
:0 0 24rpx 0;
    color
:#333;
    border-radius
:0px;
    background
:#fff000;
    width
:100%;
    line-height
:80rpx;
    font-size
:32rpx;
    height
:80rpx;
}

